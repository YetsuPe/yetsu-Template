[data-yetsu="menu"]
	z-index:2
	position : fixed
	height : 100%
	width: 220px
	left:-220px
	background: darken(COLOR_THEME,30% )
	transition(left 0.4s ease-in-out)
	overflow-y:scroll
	& > a
		color: white
		display: block
		padding:  AIR
		text-decoration : none
		border-bottom: 1px solid lighten(COLOR_THEME,30%)
		&:last-child
			display: inline-block

[data-yetsu="slider"]
	margin 0
	& figcaption 
		margin 0
		& img
			width 100%
		

[data-yetsu="ico-menu"]
	position: absolute
	margin-left: 12px
	//top 40px
	left: 0
	background:darken(COLOR_THEME,40%)
	padding: 0 0.4em
	border-radius(3px)
// Logo en canvas
[data-yetsu="logo"]
	position: absolute
	margin-right: 12px
	right: 0
	width:12%
	border-radius 50%
	z-index 2
.open-menu
	left:0px
.move-blocks
	left:220px